{% from "_macros/text" import hTag %}

{% set label = block.plainText ?? null %}
{% set teamMembers = block.teamMemberReference.collect() %}

{# Output #}
<div class="[{{ block.type.handle }}] space-y-10">
  {% if label %}
    <h3 class="text-2xl">{{ label }}</h3>
  {% endif %}

  {% if teamMembers | length %}
    <ul class="gap-8 grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" data-module="Cards">
      {% for teamMember in teamMembers %}
        {% set portrait = block.showPortraits ? teamMember.portrait.one() : false %}
        <li>
          {% include '_partials/team/card' %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
